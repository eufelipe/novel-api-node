{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "baseUrl": "src",
        "sourceMap": true,
        "outDir": "dist",
        "rootDirs": ["src", "tests"],
        "esModuleInterop": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "@/tests/*": ["../tests/*"],
            "@/*": ["*"]
        }
    },
    "include": ["src", "tests"],
    "exclude": []
}
